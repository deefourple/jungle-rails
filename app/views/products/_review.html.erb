
  <tr>
    <td>
      <span class="review-number"><%= review.rating %>/5 </span><br />
    </td>
  </tr>

  <tr>
    <td class="review-content">
      <%= review.description %>
    </td>
  </tr>

 <tr>
    <td>
    <% if current_user && current_user.id == review.user_id %>
 <%= link_to fa_icon('trash'), product_review_path(product_id: review.product_id, id: review.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %> <br />
 <% end %>
    </td>
  </tr>